{
  "browser-sync": {
    "open": "tunnel",
    "tunnel": true,
    "proxy": "0.0.0.0:8000"
  },
  "styles": {
    "files": [
      "./assets/sass/app.scss"
    ],
    "dest": "./public/css"
  },
  "scripts": {
    "files": [
      "./bower_components/jquery/dist/jquery.js",
      "./bower_components/bootstrap/dist/js/bootstrap.js",
      "./bower_components/angular/angular.js",
      "./bower_components/angular-resource/angular-resource.js",
      "./assets/js/**/*.*",
      "./assets/js/app.js"
    ],
    "filename": "app.js",
    "dest": "./public/js/app/"
  },
  "bower": {
    "files": [
      "./bower_components/**/*.*"
    ],
    "dest": "./public/js"
  }
}
